# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  if Vagrant.has_plugin? "vagrant-vbguest"
    config.vbguest.no_install = true
    config.vbguest.auto_update = false
    config.vbguest.no_remote = true
  end

  config.vm.define :clienteUbuntu do |clienteUbuntu|
    clienteUbuntu.vm.box = "bento/ubuntu-22.04"
    clienteUbuntu.vm.network :private_network, ip: "192.168.100.2"
    clienteUbuntu.vm.hostname = "clienteUbuntu"
  end

  config.vm.define :servidorUbuntu do |servidorUbuntu|
    servidorUbuntu.vm.box = "bento/ubuntu-22.04"
    servidorUbuntu.vm.network :private_network, ip: "192.168.100.3"
    servidorUbuntu.vm.hostname = "servidorUbuntu"
    
    # Configuración de recursos para manejar contenedores LXD
    servidorUbuntu.vm.provider "virtualbox" do |vb|
      vb.memory = "4096"
      vb.cpus = 4
      # Habilitar nested virtualization si está disponible
      vb.customize ["modifyvm", :id, "--nested-hw-virt", "on"]
    end

    # Port forwarding para acceder al balanceador desde el host
    servidorUbuntu.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1"
    servidorUbuntu.vm.network "forwarded_port", guest: 8404, host: 8404, host_ip: "127.0.0.1"

    # Aprovisionamiento principal
    servidorUbuntu.vm.provision "shell", path: "scripts/install_lxd.sh"
    servidorUbuntu.vm.provision "shell", path: "scripts/setup_containers.sh", privileged: false
    servidorUbuntu.vm.provision "shell", path: "scripts/configure_haproxy.sh", privileged: false
  end
end
